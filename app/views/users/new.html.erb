<div class="container">

  <div class=" center jumbotron">
    <h1>Go ahead and sign up</h1>


  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= simple_form_for @user do |f| %>
        <div class="label">
          <%= f.input :name %>
          <br>
          <%= f.input :email %>
          <br>
          <%= f.input :password %>
          <br>
          <%= f.input :password_confirmation, label: 'Confirm Password' %>
          <br>
      </div>
      <div class="btn-signin">
        <%= f.button :submit  %>
      </div>
      <% end %>
      <br>
      <br>
</div>
</div>
<div>
</div>
