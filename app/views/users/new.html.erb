<div class="container">

  <div class=" center jumbotron">
    <h1>Go ahead and sign up</h1>
      <h4> All the cool kids are doing it. </h4>
  </div>

  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= simple_form_for @user do |f| %>
        <%= f.input :name %>
        <br>
        <%= f.input :email %>
        <br>
        <%= f.input :password %>
        <br>
        <strong> ** Confirm Password </strong>
        <br>
        <%= f.input :password_confirmation, label: false %>
        <br>
        <%= f.button :submit %>
      <% end %>
      <br>
      <br>

</div>
<div>
</div>
