<div class="col-md-8 col-md-offset-2" >
<div class="jumbotron">
    <h1> Welcome to Reddit </h1>


    <%= form_tag auth_path, method: :post do %>
      <div>
        <%= label_tag :name %>
        <%= text_field_tag :name, "", class: "form-control" %>
      <br>
      </div>

      <div>
        <%= label_tag :email %>
        <%= text_field_tag :email, "", class: "form-control" %>
      <br>
      </div>

    <div>
      <%= label_tag :password %>
      <%= password_field_tag :password, "", class: "form-control" %>
    <br>
    </div>

      <div>
        <%= submit_tag "Log In", class: "btn btn-primary btn-lg" %>
      <br>
      <br>
      </div>

      <%end%>

      <p> Still don't have an account? <%= link_to 'Sign up now', signup_path %> </p>
</div>
</div>
